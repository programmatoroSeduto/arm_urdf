<?xml version="1.0"?>
<robot name="Robot1">
	<link name="link_chassis">
    <!-- pose and inertial -->
    <pose>0 0 0.1 0 0 0</pose>
    <!-- body -->
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.07"/>
      </geometry>
    </visual>
    <!-- caster front -->
    <visual name="caster_front_visual">
      <origin rpy=" 0 0 0" xyz="0.2 0 -0.05"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>
  </link>

   <link name="link_right_wheel">
    <visual name="link_right_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
       	<cylinder length="0.04" radius="0.1"/>
      </geometry>
    </visual>
  </link>

   <link name="link_left_wheel">
    <visual name="link_left_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.1"/>
      </geometry>
    </visual>
  </link>

    <link name="arm_base">
		<visual>
			<geometry>
				<box size="0.1 .1 .1"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0.1"/>
		</visual>
	</link>

	<link name="arm_1">
		<visual>
			<geometry>
				<box size="0.05 .05 0.5"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0.25"/>
		</visual>
	</link>
	
	<link name="arm_2">
		<visual>
			<geometry>
				<box size="0.05 0.05 0.5"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0.06 0 0.15"/>
		</visual>
	</link>

  <joint name="joint_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.05 0.15 0"/>
    <child link="link_right_wheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  
  
  <joint name="joint_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.05 -0.15 0"/>
    <child link="link_left_wheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

     <joint name="base_to_arm_base" type="continuous">
		<parent link="link_chassis"/>
		<child link="arm_base"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0 0 0"/>
	</joint>

        <joint name="arm_1_to_arm_base" type="revolute">
		<parent link="arm_base"/>
		<child link="arm_1"/>
		<axis xyz="1 0 0"/>
		<origin xyz="0 0 0.15"/>
		<limit effort ="100.0" lower="-1.0" upper="1.0" velocity="0.5"/>
	</joint>

       <joint name="arm_2_to_arm_1" type="revolute">
		<parent link="arm_1"/>
		<child link="arm_2"/>
		<axis xyz="1 0 0"/>
		<origin xyz="0.0 0 0.45"/>
		<limit effort ="100.0" lower="-2.5" upper="2.5" velocity="0.5"/>
	</joint>
</robot>
	
